<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainheroes"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:maxHeight="350dp"
    android:minHeight="100dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/div1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/back_card"
        android:paddingTop="2.8dp"
        android:paddingBottom="3.2dp"
        android:paddingRight="3.2dp"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imgg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"

            android:layout_toStartOf="@+id/div4">


            <ImageView
                android:id="@+id/images"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginEnd="16dp"

                android:contentDescription="Logo"
                android:src="@drawable/hero1"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="75.5dp"
                android:layout_height="75.5dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:contentDescription="Logo"
                android:src="@drawable/border"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/div4"
            android:layout_width="205dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/card_heroes"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/imgg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppinsbold"
                android:text="halo"
                android:textColor="@color/font"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16sp"
                android:fontFamily="@font/poppinssemibold"
                android:text="halo"
                android:textColor="@color/font"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
