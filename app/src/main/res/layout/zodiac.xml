<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zodiac"
    android:background="@color/background">
    <!--    android:background="@drawable/gradient">-->

    <!-- Guideline for responsive layout -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/toolbartitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kalkulator Zodiac"
            android:fontFamily="@font/poppinsbold"
            android:textSize="20sp"
            android:textColor="@color/font"
            android:gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_new"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.2" />
    <TextView
        android:id="@+id/titledesk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kalkulator Zodiac"
        android:textSize="24sp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/font"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Title Description -->
    <TextView
        android:id="@+id/titleDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Digunakan untuk mengetahui total maksimal diamond yang dibutuhkan untuk mendapatkan skin Zodiac."
        android:textAlignment="center"
        android:textSize="14sp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/font"
        android:layout_marginTop="16dp"
        android:justificationMode="inter_word"
        app:layout_constraintTop_toBottomOf="@id/titledesk"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintWidth_percent="0.8"/>

    <!-- SeekBar -->
    <SeekBar
        android:id="@+id/magicWheelSeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/titleDescription"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintWidth_percent="0.92"
        android:progressDrawable="@drawable/seekbar_progress"
        android:thumb="@drawable/seekbar_thumb"
        android:thumbOffset="0dp"/>

    <!-- Stats Container for Star Points and Diamonds -->
    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/magicWheelSeekBar"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintWidth_percent="0.8">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poin Bintang : "
                android:textColor="@color/font"
                android:fontFamily="@font/poppinsbold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/starPointsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font"
                android:fontFamily="@font/poppinsbold"
                android:textSize="16sp"
                tools:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diamond : "
                android:textColor="@color/font"
                android:fontFamily="@font/poppinsbold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/diamondValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font"
                android:fontFamily="@font/poppinsbold"
                android:textSize="16sp"
                tools:text="1700"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Result Text -->
    <TextView
        android:id="@+id/result_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/btnsum"
        android:padding="16dp"
        android:textAlignment="center"
        android:textColor="@color/font"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/statsContainer"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintWidth_percent="0.8"/>

</androidx.constraintlayout.widget.ConstraintLayout>
