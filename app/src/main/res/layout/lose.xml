<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lose"
    android:background="@color/background"

    >

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/toolbartitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="20sp"
                    android:textColor="@color/font"
                    android:gravity="center"/>
            </androidx.appcompat.widget.Toolbar>

            <!-- Guideline for responsive layout -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9" />

            <!-- Image View for Hero -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/logo_new"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintHeight_percent="0.2" />

            <!-- Hero Details: Name, Role, and Stats -->
            <TextView
                android:id="@+id/titledesk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Target Match"
                android:textSize="24sp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/font"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/logo"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintWidth_percent="0.8" />

            <TextView
                android:id="@+id/desk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lose"
                android:gravity="center"
                android:textSize="14sp"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/font"
                app:layout_constraintTop_toBottomOf="@id/titledesk"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintWidth_percent="0.8" />

            <!-- Stats Section (Can use RecyclerView for dynamic data) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/desk"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintWidth_percent="0.8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Pertandingan Anda"
                    android:textColor="@color/font"
                    android:fontFamily="@font/poppinsbold"
                    android:layout_marginTop="30dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/totalmatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contoh 223"
                    android:background="@drawable/btn2"
                    android:padding="12dp"
                    android:minHeight="48dp"
                    android:minWidth="0dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColorHint="@color/font"
                    android:textSize="16sp"
                    android:textColor="@color/font"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Win Rate Anda"
                    android:textColor="@color/font"
                    android:fontFamily="@font/poppinsbold"
                    android:layout_marginTop="30dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/totalwr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contoh 54"
                    android:background="@drawable/btn2"
                    android:padding="12dp"
                    android:minHeight="48dp"
                    android:minWidth="0dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColorHint="@color/font"
                    android:textColor="@color/font"
                    android:textSize="16sp"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berapa lose yang anda inginkan?"
                    android:textColor="@color/font"
                    android:fontFamily="@font/poppinsbold"
                    android:layout_marginTop="30dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/target"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contoh 70"
                    android:textColorHint="@color/font"
                    android:textColor="@color/font"
                    android:background="@drawable/btn2"
                    android:padding="12dp"
                    android:minHeight="48dp"
                    android:minWidth="0dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="16sp"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    />

                <Button
                    android:id="@+id/hitung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnn"
                    android:text="Hitung"
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/font"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/result_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/btnsum"
                    android:padding="12dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:textAlignment="center"
                    android:textColor="@color/font"
                    android:layout_marginBottom="100dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Toolbar -->


</androidx.constraintlayout.widget.ConstraintLayout>
